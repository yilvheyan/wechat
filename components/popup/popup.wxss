.bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 100%;
  opacity: 0.6;
  background-color: rgba(0, 0, 0, 1);
}

.wrapper {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 750rpx;
  height: 100%;
  transform: translate(-50%, -50%);
}

.getuserinfo {
  position: relative;
  top: 50%;
  transform: translateY(-50%);
  width: 580rpx;
  /* height: 346rpx; */
  margin: 0 auto;
  background: white;
  border-radius: 12rpx;
  padding-top: 80rpx;
  box-sizing: border-box;
}

.getuserinfotitle {
  line-height: 30rpx;
  height: 38rpx;
  font-size: 40rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(55, 58, 61, 1);
  margin: 0 auto;
  text-align: center;
}

.getuserinfomailtitle {
  /* width:446rpx; */
  height: 28rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(97, 103, 109, 1);
  margin: 40rpx auto 0;
  text-align: center;
}

.getuserinfoxian {
  width: 580rpx;
  height: 1rpx;
}

.button {
  margin-top: 60rpx;
  display: flex;
  border-top: 1rpx solid #b5b6b8;
}

.cancelbutton {
  flex: 1;
  border-right: 1rpx solid #ccc;
  text-align: center;
  line-height: 90rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(76, 80, 85, 1);
}

.getuserinfotitlebutton {
  flex: 1;
  line-height: 90rpx;
  height: 90rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(67, 147, 242, 1);
  text-align: center;
}

.ebutton {
  display: block;
  width: 100%;
  height: 90rpx !important;
  background: white !important;
  border: none;
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(67, 147, 242, 1);
}

button::after {
  border: 0;
  display: none;
}
