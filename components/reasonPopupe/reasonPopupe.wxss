/* components/reasonPopupe/reasonPopupe.wxss */

.bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 750rpx;
    height: 100%;
    opacity: 0.6;
    background-color: rgba(0, 0, 0, 1);
}

.pupContent {
    width: 100%;
    /* border: 1rpx saddlebrown solid; */
    position: fixed;
    bottom: 0;
    z-index: 999;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px -4rpx 24rpx 0rpx rgba(152, 173, 197, 0.4);
    border-radius: 12rpx 12rpx 0px 0px;
    padding-bottom: 44rpx;
    box-sizing: border-box;
}

/* 弹出框样式 */

.refund_popup {
    width: 750rpx;
    height: 100%;
}

.refund_popup_top {
    font-size: 32rpx;
    font-family: PingFangSC-Medium;
    font-weight: 500;
    color: rgba(51, 51, 51, 1);
    text-align: center;
    margin-top: 25rpx;
}

.refund_popup_footer {
    margin-left: 51rpx;
}

.refund_popup_footer view {
    height: 82rpx;
}

.refund_popup_select {
    font-size: 30rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    margin-top: 40rpx;
}

.refund_popup_img {
    width: 34rpx;
    height: 34rpx;
}

.refund_popup_list {
    height: 80rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    display: flex;
    align-items: center;
}

.refund_popup_list text {
    margin-left: 38rpx;
}

.refund_footer_button {
    width: 640rpx;
    height: 82rpx;
    background: linear-gradient(179deg, rgba(116, 202, 251, 1) 0%, rgba(91, 163, 238, 1) 100%);
    border-radius: 12rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    text-align: center;
    line-height: 82rpx;
    margin-top: 42rpx;
}

.addxinxi {
    width: 640rpx;
    height: 200rpx;
    overflow: hidden;
    margin-top: 10rpx;
    background: #f6f6f6;
    border-radius: 6rpx;
    font-size: 32rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    line-height: 30rpx;
}

.poplupebutton {
    width: 640rpx;
    height: 82rpx;
    border-radius: 6rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    margin: 50rpx auto;
    margin-left: 0rpx;
    border: 0;
    background: linear-gradient(180deg, rgba(116, 202, 251, 1) 0%, rgba(91, 163, 238, 1) 100%);
}
