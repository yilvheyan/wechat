.integralDetail {
    width: 750rpx;
    height: 100%;
    background: rgba(243, 246, 250, 1);
    overflow: hidden;
}

/* 去除滚动条样式 */

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.integralDetailist {
    width: 706rpx;
    /* height: 100%; */
    background: rgba(255, 255, 255, 1);
    border-radius: 12rpx;
    margin: 24rpx 22rpx 0rpx 22rpx;
}

.integralDetail_every {
    width: 628rpx;
    height: 100rpx;
    border-bottom: 1rpx solid #f3f3f3;
    margin-left: 33rpx;
    display: flex;
    justify-content: space-between; /* 两端对齐 */
    align-items: center; /* 垂直居中 */
}

.integralDetail_every_top {
    font-size: 26rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    line-height: 37rpx;
}

.integralDetail_every_bottom {
    font-size: 20rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
}

.integralDetail_every_right {
    font-size: 28rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(67, 147, 242, 1);
    line-height: 40rpx;
    margin-right: 20rpx;
}

.goutto_end {
    margin: 80rpx 0rpx 50rpx 0rpx;
    text-align: center;
    font-size: 26rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(124, 124, 124, 1);
}
