/* 联系客服 */

.lianXiService {
    width: 750rpx;
    height: 100%;
    position: fixed;
    top: 0;
    background: rgba(243, 246, 250, 1);
}

/* 去除滚动条样式  */

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.lianXiService_top {
    margin: 22rpx;
    width: 706rpx;
    height: calc(100% - 300rpx);
    background: rgba(255, 255, 255, 1);
    border-radius: 12rpx;
    padding-bottom: 50rpx;
}

.lianXiService_top_kefu {
    text-align: center;
}

.lianXiService_top_kefu text {
    font-size: 32rpx;
    font-family: PingFangSC;
    font-weight: 500;
    color: rgba(102, 102, 102, 1);
    border-bottom: 1rpx solid rgba(102, 102, 102, 1);
}

.lianXiService_top_title {
    height: 79rpx;
    line-height: 79rpx;
    border-bottom: 1rpx solid rgba(238, 238, 238, 1);
    font-size: 26rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(102, 102, 102, 1);
    margin-left: 29rpx;
}

.lianXiService_top_list {
    margin-left: 29rpx;
    height: 99rpx;
    border-bottom: 1rpx solid rgba(238, 238, 238, 1);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.lianXiService_top_left {
    width: 500rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 26rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(102, 102, 102, 1);
}

.lianXiService_top_right {
    width: 16rpx;
    height: 28rpx;
    margin-right: 33rpx;
}

.tanchu_view_question {
    width: 550rpx;
    text-align: left;
    font-size: 32rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(4, 4, 4, 1);
    margin-top: 20rpx;
    margin-left: 54rpx;
}

.tanchu_view_answer {
    width: 600rpx;
    font-size: 26rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(124, 124, 124, 1);
    margin: 26rpx 22rpx 32rpx 22rpx;
}

.goutto_end {
    margin: 80rpx 0rpx 50rpx 0rpx;
    text-align: center;
    font-size: 26rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(124, 124, 124, 1);
}

.tanchu_view_cuowu {
    width: 48rpx;
    height: 48rpx;
    position: absolute;
    right: 0rpx;
    top: 0rpx;
}

/* 遮罩 */

.zhezao {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0px;
    background: rgba(0, 0, 0, 0.4);
    overflow: hidden;
}

.tanchu_viewlist {
    width: 90%;
    height: 587rpx;
    margin: 50% auto;
    overflow: hidden;
    background: rgba(255, 255, 255, 1);
    border-radius: 10rpx;
    padding: 4rpx;
    position: relative;
}

.tanchu_view {
    width: 95%;
    height: 567rpx;
}

.tanchu_view_cuowu_list {
    text-align: right;
}

.tanchu_view_cuowu {
    width: 48rpx;
    height: 48rpx;
    margin-right: 10rpx;
}

.tanchu_view_que {
    width: 102rpx;
    height: 102rpx;
    margin: 0rpx 0rpx 0rpx 249rpx;
}

.tanchu_view_succ {
    font-size: 30rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    text-align: center;
    margin-top: 12rpx;
}

.tanchu_view_yea {
    font-size: 24rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    text-align: center;
    margin-top: 25rpx;
}

.tanchu_view_goto {
    font-size: 24rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(41, 139, 241, 1);
    text-align: center;
    margin-top: 33rpx;
}

.tanchu_view_gotoimg {
    width: 12rpx;
    height: 18rpx;
    margin-left: 6rpx;
}

.tanchu_view_bottom {
    width: 100%;
    display: flex;
    margin-top: 12rpx;
}

.tanchu_view_bottom_left {
    width: 50%;
    font-size: 26rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    line-height: 97rpx;
    text-align: center;
    border-top: 1rpx solid rgba(238, 238, 238, 1);
    border-right: 1rpx solid rgba(238, 238, 238, 1);
}

.tanchu_view_bottom_right {
    width: 50%;
    font-size: 26rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    line-height: 97rpx;
    text-align: center;
    border-top: 1rpx solid rgba(238, 238, 238, 1);
}
