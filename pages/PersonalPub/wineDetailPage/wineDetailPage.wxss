.lunbo-image {
    width: 750rpx;
    height: 480rpx;
    border-top: 1rpx #c5cbd9 solid;
}

.swiper_img {
    width: 100%;
    height: 480rpx;
    border-bottom: 1rpx #c5cbd9 solid;
}

.wine {
    width: 684rpx;
    height: 113rpx;
    margin: 32rpx 0rpx 0rpx 31rpx;
}

.wine_name {
    font-size: 32rpx;
    font-family: PingFang-SC-Bold;
    font-weight: bold;
    color: rgba(55, 58, 61, 1);
}

.wine_milliliter {
    font-size: 28rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    color: rgba(181, 182, 184, 1);
    width: 500rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.wine_money {
    font-size: 40rpx;
    font-weight: bold;
    color: rgba(68, 156, 254, 1);
    float: right;
    margin-top: 20rpx;
}

.wine_yushou {
    width: 750rpx;
    height: 84rpx;
}

.wine_yushou image {
    width: 750rpx;
    height: 84rpx;
}

.wine_big image {
    width: 750rpx;
    /* height: 1100rpx; */
}

.wineDatailPage {
    padding-bottom: 20rpx;
}

.wineDatailPage_footer {
    width: 750rpx;
    height: 98rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px -1px 0px 0px rgba(196, 209, 224, 0.5);
    position: fixed;
    bottom: 0rpx;
    display: flex;
}

.wineDatailPage_footer_left {
    width: 422rpx;
    height: 98rpx;
    font-size: 22rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    color: rgba(181, 182, 184, 1);
    line-height: 86rpx;
    margin-left: 32rpx;
}

.wineDatailPage_footer_right {
    width: 328rpx;
    height: 98rpx;
    background: linear-gradient(0deg, rgba(116, 202, 251, 1) 0%, rgba(91, 163, 237, 1) 100%);
    font-size: 36rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    color: rgba(255, 255, 255, 1);
    text-align: center;
    line-height: 86rpx;
}
