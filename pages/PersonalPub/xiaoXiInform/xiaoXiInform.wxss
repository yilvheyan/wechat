.xiaoXiInform {
    width: 750rpx;
    background: rgba(243, 246, 250, 1);
}

.xiaoXiInform_top {
    width: 100%;
    height: 280rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.xiaoXiInform_none {
    font-size: 34rpx;
    font-family: PingFangSC;
    font-weight: 500;
    color: rgba(153, 153, 153, 1);
    text-align: center;
    margin-top: 200rpx;
}

.xiaoXiInform_news {
    width: 100rpx;
    height: 150rpx;
}

.xiaoXiInform_exchange {
    width: 100rpx;
    height: 150rpx;
}

.xiaoXiInform_img {
    width: 100rpx;
    height: 100rpx;
}

.xiaoXiInform_font {
    font-size: 24rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
}

.xiaoXiInform_center {
    width: 100%;
}

.xiaoXiInform_center_view {
    width: 97%;
    height: 150rpx;
    position: relative;
    background: white;
    margin: 10rpx auto;
    border-radius: 5rpx;
}

.xiaoXiInform_center_red {
    position: absolute;
    left: 25rpx;
    top: 10rpx;
    width: 22rpx;
    height: 22rpx;
    background: rgba(247, 83, 83, 1);
    border: 2px solid rgba(255, 255, 255, 1);
    border-radius: 50%;
}

.xiaoXiInform_img2 {
    width: 90rpx;
    height: 90rpx;
    margin-left: 43rpx;
    margin-top: 20rpx;
    float: left;
}

.xiaoXiInform_center_right {
    width: 540rpx;
    height: 150rpx;
    float: left;
    margin-left: 20rpx;
    border-bottom: 1rpx solid rgba(238, 238, 238, 1);
    position: relative;
}

.delet {
    position: absolute;
    top: 64rpx;
    right: 20rpx;
    width: 30rpx;
    height: 30rpx;
    z-index: 999;
}

.xiaoXiInform_right_top {
    height: 40rpx;
    margin-top: 20rpx;
}

.xiaoXiInform_right_top_span {
    font-size: 28rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    float: left;
}

.xiaoXiInform_right_top_data {
    font-size: 20rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    float: right;
    margin-top: 5rpx;
}

.xiaoXiInform_right_bottom {
    height: 40rpx;
    margin-top: 20rpx;
}

.xiaoXiInform_right_bottom_span {
    width: 80%;
    font-size: 20rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(102, 102, 102, 1);
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    float: left;
}

.xiaoXiInform_right_bottom_img {
    width: 16rpx;
    height: 28rpx;
    float: right;
    margin-top: 5rpx;
}
