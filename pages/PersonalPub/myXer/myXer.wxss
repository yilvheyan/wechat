.recruitment {
    width: 750rpx;
    background: rgba(238, 238, 238, 1);
    overflow-x: hidden;
    overflow-y: hidden;
    height: calc(100%);
    position: fixed;
    top: 0rpx;
    left: 0rpx;
    margin: auto;
}

.recruitment_top {
    width: 750rpx;
    height: 90rpx;
    font-size: 30rpx;
    font-family: PingFangSC-Regular;
    margin-left: 24rpx;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    line-height: 90rpx;
}

.recruitment_bgm {
    width: 706rpx;
    height: 228rpx;
    margin-left: 22rpx;
}

/* 中间 */

.recruitment_center {
    width: 100%;
    height: 248rpx;
    position: relative;
}

.recruitment_track {
    width: 696rpx;
    height: 150rpx;
    display: flex;
    position: absolute;
    top: 54rpx;
    left: 33rpx;
}

.recruitment_track_img {
    width: 118rpx;
    height: 119rpx;
    border-radius: 50%;
}

.recruitment_track_center {
    margin: 18rpx 0rpx 0rpx 19rpx;
    width: 380rpx;
    height: 100rpx;
}

.recruitment_track_center_name {
    font-size: 25rpx;
    font-family: PingFangSC-Regular;
    font-weight: 800;
    color: rgba(61, 91, 178, 1);
    line-height: 45rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.recruitment_track_center_time {
    font-size: 22rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(61, 91, 178, 1);
    line-height: 45rpx;
}

.recruitment_track_right {
    width: 117rpx;
    height: 55rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 6rpx;
    font-size: 26rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(61, 91, 178, 1);
    line-height: 55rpx;
    text-align: center;
    margin: 33rpx 0rpx 0rpx 0rpx;
}

/* 底部按钮css */

.recruitment_food {
    position: fixed;
    bottom: 0rpx;
    width: 750rpx;
    height: 98rpx;
    background: linear-gradient(180deg, rgba(116, 202, 251, 1) 0%, rgba(91, 163, 238, 1) 100%);
    font-size: 34rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    line-height: 98rpx;
    border-radius: 0;
}

.recruitment_food::after {
    border-radius: 0;
}
