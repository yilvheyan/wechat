    bottom: 0rpx;
    margin: 0 auto;
    overflow: hidden;
    background: rgba(255, 255, 255, 1);
    border-radius: 50rpx 50rpx 0rpx 0rpx;
    padding: 4rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

