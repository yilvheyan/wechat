/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
}
 
.modal-dialog {
  overflow: hidden;
  position: fixed;
  top: 30%;
  background: #f9f9f9;
  margin: -110rpx 105rpx;
  border-radius: 50%;
}
.view-image{
  width: 600rpx;
  height: 600rpx;
}